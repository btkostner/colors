# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Enforce the one true coding standard
[*]
indent_size = 4
indent_style = space

# Set the max line count
[*.md]
max_line_length = 80
